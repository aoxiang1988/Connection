<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/web_music_image_View"
                android:layout_width="180dp"
                android:layout_height="180dp"
                app:srcCompat="@drawable/ic"
                android:layout_gravity="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="20dp">
                <Button
                    android:id="@+id/web_previous_button"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/previous_button_ripple"/>
                <Button
                    android:id="@+id/web_start_button"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/start_button_ripple"/>
                <Button
                    android:id="@+id/web_stop_button"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/stop_pause_button_ripple"
                    android:visibility="gone"/>
                <Button
                    android:id="@+id/web_next_button"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/next_button_ripple"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
