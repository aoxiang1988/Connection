<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff66ff"
        android:visibility="gone">
        <TextView
            android:id="@+id/catalog"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:focusable="false"
            android:includeFontPadding="false"
            android:text="A"
            android:textColor="#0033CC"
            android:textSize="25sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/side_listmusicpicture"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:paddingBottom="0.5sp"
            android:src="@drawable/ic"/>
        <LinearLayout
            android:id="@+id/side_listitem"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:paddingLeft="5dp" >

            <TextView
                android:id="@+id/side_musictitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:text="musictitle"
                android:textSize="20dp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/side_musicartist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="musicartist"
                    android:textSize="15dp"
                    android:singleLine="true"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/side_musictime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:text="musictime"
                    android:textSize="15dp"
                    android:textStyle="italic" />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0.5sp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/noplaycolor" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
