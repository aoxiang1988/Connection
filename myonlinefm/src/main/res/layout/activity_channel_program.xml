<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sec.myonlinefm.classificationprogram.ChannelProgramActivity">
    <LinearLayout
        android:id="@+id/channel_info_view"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:orientation="vertical"
        android:paddingTop="?android:attr/actionBarSize">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/current_channel_pic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/hybrid_radio_dns_img"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:padding="10dp"
                tools:ignore="NestedWeights" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1" >
                    <TextView
                        android:id="@+id/current_channel_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black" />
                </ScrollView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:orientation="horizontal"
                    android:gravity="center|left">

                    <com.sec.myonlinefm.defineview.RoundImageView
                        android:id="@+id/podcasters_pic"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/human" />
                    <TextView
                        android:id="@+id/podcasters_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/unknow_broad_caster"
                        android:textColor="@color/black"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:baselineAligned="false">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                tools:ignore="NestedWeights">

                <ImageView
                    android:id="@+id/fav_on_line_channel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:contentDescription="icon"
                    android:src="@drawable/hybrid_radio_radio_off_start_ripple"
                    android:tint="@color/net_fm_back_a"/>
                <TextView
                    android:gravity="center"
                    style="@style/RobotoCondensedRegularFontStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:includeFontPadding="false"
                    android:layout_weight="2"
                    android:text="收藏"
                    android:textAllCaps="true"
                    android:textColor="@color/net_fm_back_a" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/share"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/abc_ic_menu_share_mtrl_alpha_ripple"
                    android:contentDescription="icon"
                    android:tint="@color/net_fm_back_c"
                    android:layout_weight="1"
                    tools:ignore="PrivateResource" />
                <TextView
                    android:gravity="center"
                    style="@style/RobotoCondensedRegularFontStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:includeFontPadding="false"
                    android:layout_weight="2"
                    android:text="分享"
                    android:textAllCaps="true"
                    android:textColor="@color/net_fm_back_c" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/down_file"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_down_24dp"
                    android:tint="@color/net_fm_back_e"
                    android:contentDescription="icon"
                    android:layout_weight="1"/>
                <TextView
                    android:gravity="center"
                    style="@style/RobotoCondensedRegularFontStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:includeFontPadding="false"
                    android:layout_weight="2"
                    android:text="批量下载"
                    android:textAllCaps="true"
                    android:textColor="@color/net_fm_back_e" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <include
        layout="@layout/tab_controller"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
