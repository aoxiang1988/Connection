<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="?android:attr/actionBarSize">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/fm_list_local"
                style="@style/RobotoCondensedRegularFontStyle"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/about_app_info_background"
                android:minHeight="23dp"
                android:paddingBottom="2dp"
                android:paddingEnd="18dp"
                android:paddingStart="18dp"
                android:paddingTop="2dp"
                android:backgroundTint="@color/net_fm_back_c">
                <TextView
                    android:id="@+id/fm_list_local_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="本地台"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:layout_centerInParent="true"
                    android:textSize="15sp"/>
                <ImageView
                    android:id="@+id/other_local_list"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/other_local_button"
                    android:layout_centerInParent="true"
                    android:layout_alignParentRight="true"
                    android:tint="@color/tab_unselected"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:contentDescription="all local" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <Button
                android:layout_gravity="center"
                android:id="@+id/fm_list_center"
                style="@style/RobotoCondensedRegularFontStyle"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/about_app_info_background"
                android:includeFontPadding="false"
                android:minHeight="23dp"
                android:paddingBottom="2dp"
                android:paddingEnd="18dp"
                android:paddingStart="18dp"
                android:paddingTop="2dp"
                android:text="中央台"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:backgroundTint="@color/net_fm_back_b"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:orientation="vertical">

        <ListView
            android:id="@+id/fm_list_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/about_radio_badge_margin_start"
            android:layout_marginRight="@dimen/about_radio_badge_margin_start"
            android:divider="@null"/>
    </LinearLayout>

</LinearLayout>
