<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sec.myonlinefm.classificationprogram.fragment.RadioLiveFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/dialog_body_progress_margin_start"
        android:layout_marginStart="@dimen/dialog_body_progress_margin_start">
        <LinearLayout
            android:id="@+id/scroller_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="广播"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@color/black"
                style="@style/RobotoCondensedRegularFontStyle"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/local_but"
                    android:gravity="center"
                    style="@style/RobotoCondensedRegularFontStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/about_app_info_background"
                    android:backgroundTint="@color/net_fm_back_a"
                    android:includeFontPadding="false"
                    android:minHeight="23dp"
                    android:paddingBottom="2dp"
                    android:paddingEnd="18dp"
                    android:paddingStart="18dp"
                    android:paddingTop="2dp"
                    android:text="全国广播电台"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="10sp" />

                <Button
                    android:id="@+id/net_radio_but"
                    android:gravity="center"
                    style="@style/RobotoCondensedRegularFontStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/about_app_info_background"
                    android:includeFontPadding="false"
                    android:minHeight="23dp"
                    android:paddingBottom="2dp"
                    android:paddingEnd="18dp"
                    android:paddingStart="18dp"
                    android:paddingTop="2dp"
                    android:text="网络广播电台"
                    android:backgroundTint="@color/net_fm_back_d"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="10sp" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="排行"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@color/black"
                style="@style/RobotoCondensedRegularFontStyle"/>
        </LinearLayout>
    </ScrollView>

</FrameLayout>
